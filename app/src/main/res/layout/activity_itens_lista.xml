<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_gravity="center"
        android:id="@+id/rl_itensLista"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/imagemItem"
            android:layout_width="100dp"
            android:layout_height="100dp"
            />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/lista_nome_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Nome"
                android:textSize="30dp" />

            <TextView
                android:id="@+id/lista_id_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Id"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lista_descricao_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="DescriÃ§ao"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lista_preco_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Preco"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lista_quantidade_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/lista_usuario_item"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Quantidade"
                android:textSize="20dp" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>