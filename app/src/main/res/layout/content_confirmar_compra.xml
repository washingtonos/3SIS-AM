<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="br.com.fiap.am.amproject.ConfirmarCompra"
    tools:showIn="@layout/activity_confirmar_compra">

    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_height="0dp"
        android:gravity="center|left"
        android:layout_weight="1"
        android:text="Informaçao sobre sua compra"
        android:textSize="20sp"
        android:textColor="@color/colorSecondary"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center|left"
        android:background="@color/colorPrimaryDark"
        android:text="Vendedor:"/>
    <TextView
        android:layout_width="match_parent"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:gravity="center|left"
        android:text="Comprei um/a:"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.8"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/tv_qrcode"
            android:layout_width="wrap_content"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:layout_height="wrap_content"
            android:gravity="center|left"
            android:text="QR Code: "/>
        <ImageView
            android:layout_toRightOf="@+id/tv_qrcode"
            android:layout_width="128dp"
            android:layout_height="128dp"
            android:background="@drawable/focus_selector"/>

    </RelativeLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.5"
        android:orientation="vertical"
        android:gravity="center">
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button_shape"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:text="Eu confirmo o pagamento"
        android:textSize="12sp"/>
    <Button
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:background="@drawable/button_shape"
        android:layout_gravity="center"
        android:layout_marginBottom="32dp"
        android:textSize="12sp"
        android:text="Näo, desisti da ideia"/>
    </LinearLayout>

</LinearLayout>
